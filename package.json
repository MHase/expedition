{
	"name": "mono-saas",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"prettier": "^3.6.2",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.19",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"better-auth": "^1.3.7"
	}
}
